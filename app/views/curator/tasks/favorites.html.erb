<div id="content" class="col-md-9 admin">
	
  <h2><%=t('revs.user.curator_dashboard')%></h2>

  <h3>
    <%= t('revs.curator.favorites') %>
    <span class="object-count text-muted">(<%= SavedItem.count %> <%=t('revs.messages.total')%>)</span>
  </h3>
  
  <ul class="nav nav-tabs">
      <li class="<%="active" if @tab == @tab_list_item%>"><a href="#<%=@tab_list_item%>" data-toggle="tab"><%=t('revs.curator.by_item') %></a></li>
      <li class="<%="active" if @tab == @tab_list_user%>"><a href="#<%=@tab_list_user%>" data-toggle="tab"><%= t('revs.curator.by_user') %></a></li>
  </ul>

  <div class="tab-content">

<%# -- Tab: Saved Items Grouped By Item -- %>
      <div id='<%=@tab_list_item%>' class="tab-pane <%="active" if @tab == @tab_list_item%>">

        <div class="saved-item-pagination">
          <span>
            <%= page_entries_info @saved_items_by_item, :entry_name=>t('revs.user_galleries.item') %>
          </span>
        </div>

        <table class="table table-bordered table-condensed table-hover table-striped">
          <tr>
            <th width="50%"><%= t('revs.curator.item_title') %></th>
            <th class="right"><%= link_to t('revs.curator.total_times_saved'), favorites_table_curator_tasks_path(:order=>'num_favorites DESC', :tab=>@tab_list_item  ) %></th>
            <th><%=link_to t('revs.curator.last_saved'), favorites_table_curator_tasks_path(:order=>'updated_at DESC', :tab=>@tab_list_item) %></th>
          </tr>
          <% @saved_items_by_item.each do |result| %>
            <tr>
              <td><%=item_link(result.solr_document,:truncate=>true)%></td>
              <td class="right"><%= result.num_favorites%></td>
              <td><%= show_as_date(result.updated_at.in_time_zone) %></td>
            </tr>
          <% end %>
        </table>  
        <%= paginate @saved_items_by_item,:param_name => :pagina,  :params => {:order=>@order, :tab=>@tab_list_item} %>
      </div>

<%# -- Tab: Saved Items Grouped By User -- %>
      <div id='<%=@tab_list_user%>' class="tab-pane <%="active" if @tab == @tab_list_user%>">

        <div class="saved-item-pagination">
          <span>
            <%= page_entries_info @saved_items_by_user, :entry_name=>'user' %>
          </span>
        </div>

        <table class="table table-bordered table-condensed table-hover table-striped">
          <tr>
            <th><%=link_to t('revs.curator.username'),favorites_table_curator_tasks_path(:order_user=>'user_id ASC',:tab=>@tab_list_user) %></th>
            <th class="right"><%=link_to t('revs.curator.lists_made'), favorites_table_curator_tasks_path(:order_user=>'num_galleries DESC', :tab=>@tab_list_user) %></th>
            <th class="right"><%=link_to t('revs.curator.favorites_made'), favorites_table_curator_tasks_path(:order_user=>'galleries.saved_items_count DESC', :tab=>@tab_list_user) %></th>
            <th><%=link_to t('revs.curator.last_save'), favorites_table_curator_tasks_path(:order_user=>'updated_at DESC', :tab=>@tab_list_user) %></th>
          </tr>
          <% @saved_items_by_user.each do |result| %>
            <tr>
              <td><%=link_user_name(result.user)%></td>
              <td class="right"><%= result.num_galleries%></td>
              <td class="right"><%= result.saved_items_count %></td>
              <td><%= show_as_date(result.updated_at.in_time_zone) %></td>
            </tr>
          <% end %>
        </table>

        <%= paginate @saved_items_by_user,:param_name => :pagina2,  :params => {:order_user=>@order_user, :tab=>@tab_list_user} %>
      </div>

  </div>
   

</div>

<%= render :partial => 'devise/shared/show_curator_sidebar' %>
