<div class="nav-searchbox">
  <%= form_tag search_action_url, :method => :get, :class => 'search-form-nav form-inline' do %>
    <%= render_hash_as_hidden_fields(:omit_keys => [:q, :search_field, :qt, :page]).html_safe %>
     <div class="input-group">
        <%= text_field_tag :q, params[:q], :class => "search_q q form-control input-sm search-query", :id => "q" %>
        <span class="input-group-btn">
          <button type="submit" class="btn btn-default btn-sm">
            <%= t('revs.search.search_label') %>
          </button>
        </span>
      </div>
  <% end %>
</div>
