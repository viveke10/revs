<div id="content" class="col-sm-9">

  <h2><%= t('revs.user.change_password') %></h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <label class="control-label col-xs-12 col-sm-4 col-md-3" for="user_password"><%= f.label :password, t('revs.user.new_password') %></label>
      <div class="col-xs-8 col-sm-6 col-md-5">
        <%= f.password_field :password, :autofocus => true, :placeholder => t('revs.user.set_password'), :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-xs-12 col-sm-4 col-md-3" for="user_password_confirmation"><%= f.label :password, t('revs.user.new_password_confirm') %></label>
      <div class="col-xs-8 col-sm-6 col-md-5">
        <%= f.password_field :password_confirmation, :class => "form-control" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-6 col-md-offset-3">
        <%= f.submit t('revs.user.change_password_linktext'), :id=>'submit', :class => "btn btn-default" %>
     </div>
    </div>
  <% end %>

</div>

<%= render :partial => 'devise/shared/show_devise_sidebar' %>
