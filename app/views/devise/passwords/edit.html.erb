<div id="content" class="col-md-9">

  <h2><%= t('revs.user.change_password') %></h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="control-group">
      <label class="control-label" for="user_password"><%= f.label :password, t('revs.user.new_password') %></label>
      <div class="controls">
        <%= f.password_field :password, :autofocus => true, :placeholder => t('revs.user.set_password') %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="user_password_confirmation"><%= f.label :password, t('revs.user.new_password_confirm') %></label>
      <div class="controls">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>
    
    <div class="control-group">
      <div class="controls">
        <%= f.submit t('revs.user.change_password_linktext'), :id=>'submit', :class => "btn" %>
     </div>
    </div>
  <% end %>

</div>

<%= render :partial => 'devise/shared/show_devise_sidebar' %>
