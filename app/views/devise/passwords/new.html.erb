<div id="content" class="col-sm-9">

  <h2><%= t('revs.user.forgot_password') %></h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <label class="control-label col-xs-12 col-sm-4 col-md-3" for="user_login">
        <%= t('revs.authentication.login') %>
      </label>
      <div class="col-xs-8 col-sm-6 col-md-">
        <%= f.text_field :login, :autofocus => true, :placeholder => t('revs.user.email_or_username'), :class=>'user-login-email form-control' %>
        <div id="stanford-user-warning" class="hidden notice">
          <%= render :partial=>'/shared/stanford_webauth_reminder' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-6 col-md-offset-3">
        <%= f.submit t('revs.user.send_password_instructions'), :id=>'submit', :class => "btn btn-default" %>
     </div>
    </div>
  <% end %>

</div>

<%= render :partial => 'devise/shared/show_devise_sidebar' %>
