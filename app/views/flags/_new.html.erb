<% if can? :add_new_flag_to, @document %>
  <%= form_for(Flag.new, :remote=>true) do |f| %>
    <div class="form-group">
      <%= f.hidden_field :druid, :value=>druid %>
      <%= f.hidden_field :flag_type, :value=>'error' %>
      <%= hidden_field_tag :loadtime,Time.now%>
      <%= f.label :comment, t('revs.flags.comment_optional')%>
      <%= f.text_area :comment, :rows => '2', :class => "form-control" %>
    </div>
    <div class="form-group">
      <div class="hidden">
        <%=t('revs.contact.spambot_label')%>
        <%= text_field_tag :description, "", :placeholder => t('revs.contact.spambot'),
            :class => "form-control" %>
      </div>
    </div>
    <% if user_signed_in? %>
      <div class="checkbox">
        <%= f.check_box :notify_me %>
        <%= t('revs.flags.notify_me')%>
      </div>
    <% end %>
    <%= f.submit t('revs.flags.flag'), :class => "flag-button btn btn-default btn-sm" %>
  <% end %>
<% end %>
